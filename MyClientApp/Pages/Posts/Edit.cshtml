@page
@model MyApp.Namespace.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Post</h2>

<form id="editPostForm">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" id="Title" name="Title" class="form-control" 
               required minlength="5" maxlength="100" />
        <span class="text-danger" id="titleError" style="display: none;">Title must be between 5 and 100 characters.</span>
    </div>
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea id="Content" name="Content" class="form-control" rows="5" 
                  required minlength="20"></textarea>
        <span class="text-danger" id="contentError" style="display: none;">Content must be at least 20 characters long.</span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Update Post</button>
        <a href="/posts" class="btn btn-md btn-warning">Cancel</a>
    </div>
</form>

<div id="error-message" class="alert alert-danger" style="display: none;"></div>
<div id="success-message" class="alert alert-success" style="display: none;"></div>

<script src="/js/posts/edit.js"></script>
